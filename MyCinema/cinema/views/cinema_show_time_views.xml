<?xml version="1.0" encoding="utf-8" ?>
<odoo>


    <record id="show_time_action" model="ir.actions.act_window">
        <field name="name">Giờ chiếu phim</field>
        <field name="res_model">cinema.show.time</field>
        <field name="view_mode">tree,form</field>
    </record>


    <!--List cac show time voi cac thuoc tinh hien thi them o giao dien-->
    <record id="show_time_view_tree" model="ir.ui.view">
        <field name="name">cinema.show.time.tree</field>
        <field name="model">cinema.show.time</field>
        <field name="arch" type="xml">
            <tree string="Tests">
                <field name="begin_time"/>
                <field name="movie_ids">
                    <tree>
                        <field name="name"/>
                        <field name="length"/>
                    </tree>
                </field>
            </tree>
        </field>
    </record>

     <!--Form edit va create 1 estate property-->
    <record id="show_time_view_form" model="ir.ui.view">
        <field name="name">cinema.show.time.form</field>
        <field name="model">cinema.show.time</field>
        <field name="arch" type="xml">
            <form string="Test">
                <sheet>
                    <h1 class="mb32">
                        <field name="name" class="mb16"/>
                        <field name="begin_time" class="mb16"/>
                    </h1>
                    <group>
                        <group>
                            <field name="movie_ids"/>
                            <field name="end_time"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>